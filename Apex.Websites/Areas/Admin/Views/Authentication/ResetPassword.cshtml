@{
    Layout = "~/Areas/Admin/Views/Authentication/_AuthenticationLayout.cshtml";
    ViewData["Title"] = "Reset Password";
}

@model Apex.Admin.ViewModels.Authentication.ResetPasswordViewModel

@section scripts {
    <script src="~/assets/scripts/admin/auth.min.js"></script>
}

<p class="login-box-msg">Reset your password</p>
<form asp-controller="authentication" asp-action="resetpassword" asp-anti-forgery="true" method="post" role="form" novalidate>
    <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConfirmPassword">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">&nbsp;</div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Reset Password</button>
        </div>
    </div>
</form>
<a asp-controller="authentication" asp-action="signin" class="text-center">I already have a membership</a>
