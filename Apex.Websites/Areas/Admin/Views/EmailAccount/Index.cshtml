@{
    ViewData["Title"] = "Email Account";
    ViewData["TitleSmall"] = "Version 2.4.0";

    ViewData["Breadcrumb"] = new BreadcrumbViewModel(new CrumbViewModel[] {
        new CrumbViewModel("Home", string.Empty, "fa-dashboard"),
        new CrumbViewModel("System", string.Empty, "fa-cog"),
        new CrumbViewModel("Email Account", Url.Action("index", "emailaccount"), "fa-envelope-open")
    });
}
@section styles {
    <link rel="stylesheet" href="~/styles/admin/plugins.min.css">
}
@section scripts {
    <script src="~/scripts/admin/plugins.min.js"></script>
    <script src="~/scripts/admin/email-account.min.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-body">
                <table id="tableEmailAccount" class="table table-bordered table-striped table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Display Name</th>
                            <th>Host</th>
                            <th>Port</th>
                            <th>Enable SSL</th>
                            <th>Is Default Email Account</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>