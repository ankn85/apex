@{
    Layout = "~/Views/Accounts/_AccountLayout.cshtml";
    ViewData["Title"] = "Registration Page";
}

@model Apex.Websites.ViewModels.Accounts.RegisterViewModel

<p class="login-box-msg">Register a new membership</p>
<form asp-controller="Accounts" asp-action="Register" asp-anti-forgery="true" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" novalidate>
    <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-red"></div>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="UserName" asp-for="UserName">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="UserName" class="text-red"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Email" class="text-red"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Password" class="text-red"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Confirm password" asp-for="ConfirmPassword">
        <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        <span asp-validation-for="ConfirmPassword" class="text-red"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox"> I agree to the <a href="javascript:;">terms</a>
                </label>
            </div>
        </div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
        </div>
    </div>
</form>
<div class="social-auth-links text-center">
    <p>- OR -</p>
    <a href="javascript:;" class="btn btn-block btn-social btn-facebook btn-flat">
        <i class="fa fa-facebook"></i> Sign up using Facebook
    </a>
    <a href="javascript:;" class="btn btn-block btn-social btn-google btn-flat">
        <i class="fa fa-google-plus"></i> Sign up using Google+
    </a>
</div>
<a asp-controller="Accounts" asp-action="SignIn" class="text-center">I already have a membership</a>
