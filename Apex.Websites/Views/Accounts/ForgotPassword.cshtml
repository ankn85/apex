@{
    Layout = "~/Views/Accounts/_AccountLayout.cshtml";
    ViewData["Title"] = "Forgot Password page";
}

@model Apex.Websites.ViewModels.Accounts.ForgotPasswordViewModel

<p class="login-box-msg">Please enter your email</p>
<form asp-controller="Accounts" asp-action="ForgotPassword" asp-anti-forgery="true" method="post" role="form" novalidate>
    <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">&nbsp;</div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
        </div>
    </div>
</form>
<div class="social-auth-links text-center">
    <p>- OR -</p>
    <a href="javascript:;" class="btn btn-block btn-social btn-facebook btn-flat">
        <i class="fa fa-facebook"></i> Sign up using Facebook
    </a>
    <a href="javascript:;" class="btn btn-block btn-social btn-google btn-flat">
        <i class="fa fa-google-plus"></i> Sign up using Google+
    </a>
</div>
<a asp-controller="Accounts" asp-action="SignIn" class="text-center">I already have a membership</a>
