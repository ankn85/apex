@{
    Layout = "~/Areas/Admin/Views/Authentication/_AuthenticationLayout.cshtml";
    ViewData["Title"] = "Sign In";
}

@model Apex.Admin.ViewModels.Authentication.SignInViewModel

@section scripts {
    <script src="~/assets/scripts/admin/auth.min.js"></script>
}

<p class="login-box-msg">Sign in to start your session</p>
<form asp-controller="authentication" asp-action="signin" asp-anti-forgery="true" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" novalidate>
    <div class="form-group">
        <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-red"></div>
    </div>
    <div class="form-group has-feedback">
        <input asp-for="Email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Email" class="text-red"></span>
    </div>
    <div class="form-group has-feedback">
        <input asp-for="Password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Password" class="text-red"></span>
    </div>
    <div class="row">
        <div class="col-xs-offset-8 col-xs-4">
            <button type="submit" class="btn btn-block btn-flat btn-primary">Sign In</button>
        </div>
    </div>
</form>
<a asp-controller="authentication" asp-action="forgotpassword" class="text-center">I forgot my password</a><br>
